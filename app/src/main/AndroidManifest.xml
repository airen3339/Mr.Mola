<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.yaiba.money">
    <uses-sdk />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/login_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/login_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.yaiba.money.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.yaiba.money.MainActivity"  android:label="@string/app_name" ></activity>
        <activity android:name="net.yaiba.money.CategoryActivity"  android:label="类别设置" ></activity>
        <activity android:name="net.yaiba.money.PayActivity"  android:label="支付方式设置" ></activity>
        <activity android:name="net.yaiba.money.MemberActivity"  android:label="成员名称设置" ></activity>
    </application>

</manifest>