<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uses-libraryandroid="http://schemas.android.com/apk/distribution"
    package="net.yaiba.money">
    <uses-sdk />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--        android:theme="@style/AppTheme"-->
    <application
        android:name="net.yaiba.money.data.ListViewData"
        android:allowBackup="true"
        android:icon="@drawable/login_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/login_logo"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity
            android:name="net.yaiba.money.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.yaiba.money.MainActivity"  android:label="财务多样性管理手册" ></activity>
        <activity android:name="net.yaiba.money.DataManagementActivity"  android:label="数据管理" ></activity>
        <activity android:name="net.yaiba.money.CategoryActivity"  android:label="类别设置" ></activity>
        <activity android:name="net.yaiba.money.PayActivity"  android:label="支付方式设置" ></activity>
        <activity android:name="net.yaiba.money.MemberActivity"  android:label="成员名称设置" ></activity>
        <activity android:name="net.yaiba.money.RecordAddActivity"  android:label="记一笔" ></activity>
        <activity android:name="net.yaiba.money.RecordListActivity"  android:label="数据一览" ></activity>
        <activity android:name="net.yaiba.money.PasswordEditActivity"  android:label="修改密码" ></activity>
        <activity android:name="net.yaiba.money.RecordDetailActivity"  android:label="数据详细信息" ></activity>
    </application>

</manifest>