<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- 为了不让edittext组件获得焦点 -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="2dp">

        <TextView
            android:layout_width="155sp"
            android:layout_height="wrap_content"
            android:text="本月支出"
            android:textSize="15sp" />
        <TextView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="8888.98"
            android:textSize="28sp"
            android:id="@+id/cost_this_month"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:padding="0dp">
            <TextView
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:text="上月支出"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="2530.67"
                android:textSize="14sp"
                android:id="@+id/cost_before_month"/>

            <TextView
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:text="本月收入"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="12345.00"
                android:textSize="14sp"
                android:id="@+id/income_this_month"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:padding="0dp">

            <Button
                android:id="@+id/more_info"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="50dp"
                android:textSize="17dp"
                android:background="@drawable/btn_nor_down_yellow"
                android:layout_marginRight="20dp"
                android:text="近期数据" />
        </LinearLayout>




    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="420dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/recordslist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp" />

        </LinearLayout>
    </FrameLayout>
<!--    <TextView
        android:id="@+id/more_info"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_background"
        android:gravity="center"
        android:text="更 多 信 息"
        android:textSize="12sp"/>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="0dp">

        <Button
            android:id="@+id/record_add"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="50dp"
            android:textSize="17dp"
            android:background="@drawable/btn_nor_down_yellow"
            android:layout_marginRight="20dp"
            android:text="记一笔" />

    </LinearLayout>

</LinearLayout>
